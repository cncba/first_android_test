<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gaitianxia.catch_bad_egg"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.gaitianxia.catch_bad_egg.SplashActivity"
            android:label="@string/title_activity_splash" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.gaitianxia.catch_bad_egg.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.gaitianxia.catch_bad_egg.DisplayMessageActivity"
            android:label="@string/title_activity_display_message"
            android:parentActivityName="com.gaitianxia.catch_bad_egg.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.gaitianxia.catch_bad_egg.MainActivity" />
        </activity>
        <activity
            android:name="com.gaitianxia.catch_bad_egg.NewGameActivity"
            android:label="@string/title_activity_new_game" >
        </activity>
        <activity
            android:name="com.gaitianxia.catch_bad_egg.JoinGameActivity"
            android:label="@string/title_activity_join_game" >
        </activity>
        <activity
            android:name="com.gaitianxia.catch_bad_egg.SettingActivity"
            android:label="@string/title_activity_setting" >
        </activity>
    </application>

</manifest>